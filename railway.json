{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm ci"
  },
  "deploy": {
    "startCommand": "node src/index.js",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  },
  "variables": {
    "NODE_ENV": "production"
  }
}
