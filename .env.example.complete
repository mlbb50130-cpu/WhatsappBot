// üìù Template de fichier .env complet pour TetsuBot

# ==================== BOT CORE ====================
# Num√©ro de t√©l√©phone WhatsApp (format: +33612345678)
PHONE_NUMBER=+33612345678

# Prefix des commandes (d√©faut: !)
PREFIX=!

# Mode d√©veloppement (true/false)
DEV_MODE=false

# ==================== DATABASE ====================
# MongoDB URI (local ou Atlas)
# Local: mongodb://localhost:27017/tetsubot
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/tetsubot?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/tetsubot

# ==================== ADMIN ====================
# JIDs des admins (s√©par√©s par des virgules)
# Format: 33612345678@s.whatsapp.net,33687654321@s.whatsapp.net
ADMIN_JIDS=

# ==================== LOGGING ====================
LOG_LEVEL=info
SENTRY_DSN=

# ==================== EXTERNAL APIS ====================

## Jikan (Anime Data)
JIKAN_API=https://api.jikan.moe/v4
JIKAN_ENABLED=true
JIKAN_TIMEOUT=10000

## MyAnimeList (Alternative)
MAL_CLIENT_ID=
MAL_CLIENT_SECRET=

## Imgflip (Memes)
IMGFLIP_USERNAME=
IMGFLIP_PASSWORD=

## Discord Webhook (Notifications)
DISCORD_WEBHOOK_URL=

## Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ==================== AUTHENTICATION ====================

## Firebase
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

## Stripe (Paiements)
STRIPE_PUBLIC_KEY=pk_test_
STRIPE_SECRET_KEY=sk_test_

# ==================== CLOUD STORAGE ====================

## AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
AWS_S3_BUCKET=

# ==================== EMAIL ====================

## SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@tetsubot.com

# ==================== NODE ENVIRONMENT ====================
NODE_ENV=development
# development, production, staging

# ==================== BAILEYS SETTINGS ====================
# Options avanc√©es Baileys
MARK_ONLINE=true
AUTO_RECONNECT=true
MAX_RETRY_ATTEMPTS=5

# ==================== CUSTOM FEATURES ====================
# Activer/d√©sactiver les features
LEVEL_SYSTEM_ENABLED=true
XP_SYSTEM_ENABLED=true
QUESTS_ENABLED=false
GUILDS_ENABLED=false
TRADING_ENABLED=false
BOSSES_ENABLED=false

# ==================== GAME SETTINGS ====================
# XP par message
XP_PER_MESSAGE=5

# Cooldown XP (en ms)
XP_COOLDOWN=5000

# Multiplicateur de niveau
XP_MULTIPLIER=1.15

# XP de base
BASE_XP_FOR_LEVEL=100

# Niveau maximum
MAX_LEVEL=999

# ==================== ANTI-SPAM ====================
# Messages max par intervalle
MAX_MESSAGES_PER_INTERVAL=5

# Intervalle en ms
SPAM_CHECK_INTERVAL=10000

# Bloquer les liens
BLOCK_LINKS=true

# ==================== MAINTENANCE ====================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Bot en maintenance. R√©essayez plus tard!

# ==================== BACKUP ====================
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
KEEP_BACKUPS=30

# ==================== CACHE ====================
CACHE_ENABLED=true
CACHE_TTL=3600000

# ==================== SESSION ====================
# Dossier des sessions Baileys
SESSION_DIR=./sessions

